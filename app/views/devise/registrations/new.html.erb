<div id="primary" class="p-t-b-100 height-full">
    <div class="container">
        <div class="text-center s-14 l-s-2 my-5">
            <a class="my-5" href="index.html">

                <span>SPOTITUBE</span>

            </a>
        </div>
        <!-- Sign in form -->
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="row">


            <div class="col-md-10 mx-md-auto">
                <div class="mt-5">
                    <div class="row grid">
                        <div class="col-md-5  p-5">
                            <h1 class="mt-3 font-weight-lighter">Déjà inscrit sur SpotiTube ?</h1>
                            <br>
                            <br>
                            <br>
                            <br>
                            <div class="btn btn-outline-primary s-14 pl-4 pr-4">
                            <%= render "devise/shared/links" %>
                            </div>


                        </div>
                        <div class="col-md-7 card p-5">
                            <form class="form-material" action="index.html">
                                <!-- Input -->
                                <div class="body">
                                    <!-- Input email -->
                                    <div class="form-group form-float">
                                        <div class="form-line">
                                                <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email", placeholder: 'Email', class: 'form-control' %>
                                        </div>
                                    </div>
                                    <!-- Input password -->
                                    <div class="form-group form-float">
                                        <div class="form-line">
                                            <div class="input-group">
                                                <%= f.password_field :password, required: true, autocomplete: "mot de passe actuel", placeholder: 'Mot de passe', class: 'form-control' %>
                                            </div>
                                                <% if @minimum_password_length %>
                                                    <small><%= @minimum_password_length %> caractères minimum</small>
                                                <% end %>
                                        </div>
                                    </div>
                                    <!-- Input password -->
                                    <div class="form-group form-float">
                                        <div class="form-line">
                                            <div class="input-group">
                                                <%= f.password_field :confirmer_le_mot_de_passe, autocomplete: "new-password", placeholder: 'Mot de passe', class: 'form-control' %>
                                            </div>
                                            <small>Mot de passe identique au précédent</small>
                                        </div>
                                        <br>

                                    <input type="submit" class="btn btn-outline-primary btn-sm pl-4 pr-4" value="S'inscrire">
                                </div>
            <% end %>

            

                            </form>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>