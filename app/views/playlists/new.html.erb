


    <div class=" col-md-12  row">
  <p class="col-lg-1"></p>
  <h1 class="col-lg-11 text-center" style="margin: 15px 0"> Crée ta playlist </h1>
</div>
<div class ='align-middle text-center'>
	<div class="card m-5 p-5" style="height:auto">
		<div class="card-body">
      <div class="row">
        <div class="col-md-8 offset-md-2">

          <%= form_with model: @playlist, local: true do |form| %>

          <div class="form-group row">
            <div class="col-lg-3"> <%= form.label :title, 'Titre' %> </div>
            <div class="col-lg-9">
              <%= form.text_field :title, class: "form-control"  %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-3"> <%= form.label :description, 'Description' %> </div>
            <div class="col-lg-9">
              <%= form.text_field :description, class: "form-control"  %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-3"> <%= form.label :private_mode, 'playlist privée ou accessible aux autres users ?' %> </div>
            <div class="col-lg-9">
              <%= form.radio_button :private_mode, false %> Accessible aux autres
              <%= form.radio_button :private_mode, true %> Privée
            </div>
          </div>


            <div class="actions mt-5 row">
              <div class="col-lg-3"></div>
              <%= form.submit "Valider", class: "btn btn-outline-success btn-block col-lg-9", style: "margin: 10px 0;" %>
            </div>

            <% end %>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>